@model IEnumerable<NET.W._2018.Korzun._25.Models.Account>

@{
    ViewBag.Title = "Accounts list";
}

<h2>There are some accounts which contain in banking system</h2>
<br />
<div>
    @Html.ActionLink("Add new account", "Create", null, new { @class = "btn btn-success btn-lg" })
</div>
<br />
<br />
<table class="table table-bordered table-responsive table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Surname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AccountTypeId)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Surname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AccountType.Type)
        </td>
        <td>
            @Html.ActionLink("Edit account", "Edit", new { id = item.Id }, new { @class = "btn btn-info" })    |
            @Html.ActionLink("Balance", "Details", new { id = item.Id }, new { @class = "btn btn-primary" })   |
            @Html.ActionLink("Close account", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
